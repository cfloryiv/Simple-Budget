{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Accounts
            <small>showing already existing accounts</small>
        </h1>
    </div>
    <table class="table table-striped">
		<tr>
			<th>Account</th>
			<th>Budget</th>
		</tr>
        {% for account in accounts %}
			<tr>
                <td><a href="/accounts/{{ account._id }}">{{ account.name }}</a></td>
                <td>{{ account.budget }}</td>
            </tr>
        {% endfor %}
    </table>
    <a class="btn btn-success" href="{{ url_for('accounts.create_account') }}"><span
            class="glyphicon glyphicon-plus"></span> Create new</a>
{% endblock %}
