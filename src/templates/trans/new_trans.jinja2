{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create Transaction</h1>
    </div>
    <div class="form">
        <form method="post">
            <div class="form-group">
                <label for="name">Account name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ name }}" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="period">Period</label>
                <input type="text" class="form-control" id="period" name="period" value="{{ period[0][0] }}">
            </div>
            <div class="form-group">
                <label for="trans_date">Date</label>
                <input type="text" class="form-control" id="trans_date" name="trans_date" placeholder="12/01/2018">
            </div>
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="text" class="form-control" id="amount" name="amount" placeholder="25.00">
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
{% endblock %}
