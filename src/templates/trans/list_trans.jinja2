{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Transactions
            <small>showing already existing transactions</small>
        </h1>
    </div>
    <table class="table table-striped">
		<tr>
			<th>Account</th>
			<th>Period</th>
			<th>Date</th>
			<th>Amount</th>
		</tr>
        {% for tran in trans %}
			<tr>
                <td><a href="/trans/{{ tran._id }}">{{ tran.name }}</a></td>
                <td>{{ tran.period }}</td>
                <td>{{ tran.trans_date }}</td>
                <td>{{ tran.amount }}</td>
            </tr>
        {% endfor %}
    </table>
    <a class="btn btn-success" href="{{ url_for('trans.create_trans', name=trans.name) }}"><span
            class="glyphicon glyphicon-plus"></span> Create new</a>
{% endblock %}
